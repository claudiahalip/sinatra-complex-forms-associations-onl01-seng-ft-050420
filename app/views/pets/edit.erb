<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Pet Name:</label>

  <br>

  <input type="text" name="pet[name]" id = "pet_name" value="<%= @pet.name %>" id="pet_name">
  
   <br>
  <p>Select an existing pet or create a new one below.</p>

  <h3>Existing Pets</h3>
  <% @owners.each do |owner| %>
    <input type="radio" name="owner[id]" id="<%= owner.id %>" value="<%= owner.id %>" <%='checked' if @pet.owner.include?(owner) %>><%= owner.name %></input><br>
  <% end %>
  <br>
  
   <h3>New Owner</h3>
  <label>Owner Name: </label>
  <br>
  <input type="text" name="owner[name]" id="owner_name"></input>
  <br><br>

  <input type="submit" value="Update Pet" id="Update Pet">
</form>
